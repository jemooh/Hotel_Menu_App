<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_brown"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/txtkaribu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Boucan FoodMenu"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="19sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtkaribu"
        android:background="@drawable/round_corners_bg" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/foods" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="72dp"
            android:src="@drawable/ff" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/imageView2"
            android:src="@drawable/fud" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnhotel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnhome"
        android:layout_alignBottom="@+id/btnhome"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/btnhome"
        android:background="@drawable/btn_press_blue_bg"
        android:text="Hotel" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtkaribu"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="*Please select your location" />

    <Button
        android:id="@+id/btnhome"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:background="@drawable/btn_press_blue_bg"
        android:text="Home" />

</RelativeLayout>